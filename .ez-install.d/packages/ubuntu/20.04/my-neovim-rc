#!/usr/bin/env bash

############################################ PACKAGE METADATA (DO NOT TOUCH) ###
# ---
# package: my-neovim-rc
# executable: my-neovim-rc
# package-manager: 
# dependency: yarn, neovim
# author: Mark Lucernas
# date: 2022-01-09
# ---
################################################################################

source "${EZ_INSTALL_HOME}/install/init.sh"

#################################################### INSTALLATION (TOUCH OK) ###

# my-neovim-rc installation template generated by ez-install

function _main() {
  # Neovim
  git_clone -a "--depth=1" -o "~/.config/nvim" -f true -- "https://github.com/marklcrns/nvim-config"
  return $?
}

################################################# END INSTALL (DO NOT TOUCH) ###

res=0
_main "${@}"
res=$?

return $res
# Sourced by `pac-install()`, DO NOT USE `exit`. USE `return` INSTEAD
