source "${EZ_INSTALL_HOME}/install/init.sh"

#################################################### INSTALLATION (TOUCH OK) ###

# my-taskwarrior-rc installation template generated by ez-install

function _main() {
  git_clone -a "--depth=1" -o "~/.task" -f true -- "https://github.com/marklcrns/.task"
  return $?
}

################################################# END INSTALL (DO NOT TOUCH) ###

res=0
_main "${@}"
res=$?

return $res
